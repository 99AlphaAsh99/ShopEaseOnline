@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="row">
    <div class="col-md-9">
        <h1>Welcome to EShopOnline</h1>
        <p>Discover our featured products below:</p>

        <div class="row">
            <div class="col-md-4">
                <div class="product-card">
                    <h5>Featured Electronics</h5>
                    <p>Explore our latest electronics products.</p>
                    <a asp-page="/Categories/Electronics" class="btn btn-primary">Shop Now</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="product-card">
                    <h5>Trendy Clothing</h5>
                    <p>Check out our fashion collection.</p>
                    <a asp-page="/Categories/Clothing" class="btn btn-primary">Shop Now</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="product-card">
                    <h5>Kitchen Essentials</h5>
                    <p>Find everything for your kitchen.</p>
                    <a asp-page="/Categories/KitchenHome" class="btn btn-primary">Shop Now</a>
                </div>
            </div>
        </div>
    </div>
</div>