@page
@model ShopEaseOnline.Pages.Categories.ClothingModel
@{
    ViewData["Title"] = "Kitchen & Home";
}

<div class="container">
    <h1 class="my-4">Clothing Products</h1>

    <div class="row">
        @foreach (var product in Model.Products)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="image-container">
                        <img class="card-img-top" src="@product.ImageURL" alt="@product.Title">
                    </div>
                    <div class="card-body">
                        <h4 class="card-title">@product.Title</h4>
                        <h5>@product.Price.ToString("C")</h5>
                        <p class="card-text">@product.Description</p>

                        @if (product.StockQuantity > 0)
                        {
                            <p class="text-success">In Stock</p>
                        }
                        else
                        {
                            <p class="text-danger">Out of Stock</p>
                        }
                    </div>
                    <div class="card-footer">
                        <form method="post">
                            <input type="hidden" name="productId" value="@product.ProductID" />
                            <button type="submit" class="btn btn-primary btn-block" asp-page-handler="AddToCart">
                                Add to Cart
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>